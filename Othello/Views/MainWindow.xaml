                    </Border>
                    <Border Grid.Row="5" CornerRadius="2" BorderThickness="1 1 1 1" BorderBrush="black" Grid.Column="8" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Ellipse Width="50" Height="50" Fill="{Binding Path=Board[4][7]}"/>
                    </Border>
                    <!--#endregion-->

                    <!--#region row6-->
