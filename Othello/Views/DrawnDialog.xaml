<Window x:Class="OthelloPresentation.Views.DrawnDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OthelloPresentation.Views"
        mc:Ignorable="d"
        Title="DrawDialog" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen"
        MinWidth="400" MaxHeight="300" MaxWidth="600"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <Label Content="The Game Ended With A Draw!" VerticalAlignment="Center" FontSize="20" HorizontalAlignment="Center" Margin="0 0 0 20"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button  x:Name="btnOK" IsCancel="True" Margin="10 5" MinWidth="60">_OK</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
