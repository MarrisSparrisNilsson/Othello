<Window x:Class="OthelloPresentation.Views.DrawDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OthelloPresentation.Views"
        mc:Ignorable="d"
        Title="DrawDialog" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <Label Content="The Game Ended With A Draw!" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 0 0 20"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                <Button Content="Play again" Margin="10 5" Command=""/>
                <Button Content="Cancel" Margin="10 5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
